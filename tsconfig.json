{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es5", "dom"],
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist",
        "declaration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "jsx": "react",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
    }
}